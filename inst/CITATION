## To check rendering of citation, run readCitationFile("CITATION")

citHeader("To cite package 'signatureSearch' in publications use:")

citEntry(entry="article",
         title = "signatureSearch: environment for gene expression signature searching and functional interpretation",
         author = personList( as.person("Yuzhu Duan"),
                              as.person("Dan S. Evans"),
                              as.person("Nicholas J. Schork"),
                              as.person("Steven R. Cummings"),
                              as.person("Thomas Girke")),
         year = 2020,
         month = "oct",
         publisher = "Oxford University Press ({OUP})",
         journal = "Nucleic Acids Research",
         doi = "10.1093/nar/gkaa878",
         url = "https://doi.org/10.1093/nar/gkaa878",
         volume = 17,
         number = 1,
         pages = "10--22",
         textVersion = 
         paste("Duan Y, Evans DS, Miller RA, Schork NJ, Cummings SR and Girke T (2020).", 
               "signatureSearch: environment for gene expression signature searching and functional interpretation.",
                "Nucleic Acids Research, 17(1), 10-22. doi: 10.1093/nar/gkaa878."))
